<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basiccomponents.examples.statusbar.StatusBarActivity" tools:ignore="MissingDefaultResource">

    <Button
        android:id="@+id/btnImmersive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Goto Immersive Image"
        app:layout_constraintStart_toStartOf="@+id/btnColorRes" app:layout_constraintTop_toBottomOf="@+id/btnColorRes" />

    <Button
        android:id="@+id/btnColorInt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Set color by int"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColorRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Set color by resource"
        app:layout_constraintStart_toStartOf="@+id/btnColorInt" app:layout_constraintTop_toBottomOf="@+id/btnColorInt" />

</androidx.constraintlayout.widget.ConstraintLayout>
